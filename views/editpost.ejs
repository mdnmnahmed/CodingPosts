
<% include header%>

<center>
  <div class="">
    <div class="jumbotron col-lg-8 col-sm-12" style="padding: 10px;">
            <!--Update Form -->
      <form action="/updatePost" method="post" class="form" enctype="multipart/form-data">
        <div>
                      <!--Post ID -->
          <input type="hidden" name="postId" value="<%= row.id%>">

          <label style="float:left">Post Title</label>
          <input class="form-control" type="text" name="topic" placeholder="Post Topic" value="<%= row.topic%>">
        </div>
        
        <br>

          <!--Post Pic -->
        <% if(row.post_pic){ %>
            <img src="./../post_pic/<%= row.post_pic %>" alt="<%= row.topic%>" width="500px">
        <% } %>
          <br>
          <br>
        <label style="float:left">Upload new Pic for Thumbnail </label>
        <input type="file" name="post_pic" placeholder="Picture">
        <br>
        <br>
        <label style="float:left">Post Topic Summary</label>
        <input class="form-control" type="text" name="summary" value="<%= row.summary%>" placeholder="A small Description of the Topic"> <br>

        <label style="float:left">Post Description</label><br>
        <textarea rows="6" class="form-control" name="description" value="" placeholder="Write your Post here..."><%= row.description%></textarea>  <br>        
        
        <label style="float:left">Post Category/Keyword</label>
        <input class="form-control" type="text" name="category" value="<%= row.category%>" placeholder="Post Category/Keyword"> <br>
        
        <input type="submit" name="savepost" value="Update Post" class="btn btn-success">
      </form>
    </div>
  </div>
</center>


<% include footer%>
